#!/usr/bin/env sh

set -e

min_git_version='2.42.0'

print_help() {
	printf 'git istash - Improved version of "git stash" that can handle more corner cases.\n'
	printf '    (See "-h" of individual sub-commands.)\n'
	printf '\n'
	printf 'This is only a rudimentary help text.\n'
	printf 'Prefer "git help istash" (or "git istash --man") if available.\n'
	printf '\n'
	printf 'Usage: git istash <sub-command> [<argument>...]\n'
	printf '   or: git istash (-h | --help | --man)\n'
	printf '   or: git istash --version\n'
	printf '   or: git istash (--continue | --abort)\n'
	printf '\n'
	printf 'Options:\n'
	printf '    -a, --abort\t\t- Abort "apply" or "pop" when one is in progress.\n'
	printf '    -c, --continue\t- Continue "apply" or "pop" when one is in progress.\n'
	printf '    -h\t\t\t- Show this help text and exit.\n'
	printf '\t--help\t\t- Show manual page if possible.\n\t\t\t  (If you run it through "git", it will handle this in\n\t\t\t  its own way, which fails on Windows. See "--man".)\n'
	printf '\t--man\t\t- Alias for "--help" that is not intercepted by "git".\n\t\t\t  (Which makes it work on Windows.)\n'
	printf '\t--version\t- Show version information and exit.\n'
	printf '\n'
	printf 'Sub-commands:\n'
	printf '\tapply\t- Analog to "git stash apply --index".\n'
	printf '\tcreate\t- Analog to "git stash create" (but with options).\n'
	printf '\tpop\t- Analog to "git stash pop --index".\n'
	printf '\tpush\t- Analog to "git stash push".\n'
	printf '\tsave\t- Same as "git istash create" except it stores the stash.\n'
	printf '\tsnatch\t- Same as "git istash push" except it doesn'\''t store the stash.\n'
}

print_version() {
	printf 'git-istash version 1.4.1\n'
	printf 'Author: Piotr Siupa\n'
	printf 'Requires Git in version at least %s\n' "$min_git_version"
}

exec_subcommand() { # subcommand [arguments...]
	subcommand="$1"
	shift
	subcommand_path="$(dirname "$0")/../lib/git-istash/git-istash-$subcommand"
	if [ ! -f "$subcommand_path" ] || [ ! -x "$subcommand_path" ]
	then
		printf 'git-istash: "%s" is not a sub-command. See "git istash --help".\n' "$subcommand" 1>&2
		return 1
	fi
	exec sh "$subcommand_path" "$@"
}

show_manual() {
	if [ -f "$(dirname "$0")/../man/man1/git-istash.1" ]
	then
		if (
			cd "$(dirname "$0")/../man"
			MANPATH="$(pwd)"
			export MANPATH
			man git-istash
		)
		then
			return 0
		fi
	fi
	if man git-istash
	then
		return 0
	fi
	printf 'Unable to open the manual entry.\n' 1>&2
	printf 'Falling back to the built-in help text.\n' 1>&2
	printf '\n' 1>&2
	return 1
}

if [ "$1" = '--help' ] || [ "$2" = '--help' ] || [ "$1" = '--man' ] || [ "$2" = '--man' ]
then
	if show_manual
	then
		exit 0
	else
		if [ "$1" = '--help' ] || [ "$1" = '--man' ]
		then
			print_help
			exit 0
		else
			eval set -- "$1" -h
		fi
	fi
elif [ "$1" = '-h' ] || [ "$1" = '--help' ]
then
	print_help
	exit 0
elif [ "$1" = '--version' ] || [ "$2" = '--version' ]
then
	print_version
	exit 0
elif printf '%s\n' "$1" | grep -Eqx -- '-c|--c(o(n(t(i(n(u(e)?)?)?)?)?)?)?|--ab(o(r(t)?)?)?'  # Not a pretty solution but one that doesn't require knowing all options of every subcommand. (Although, it needs manual updating when something changes.)
then
	. "$(dirname "$0")/../lib/git-istash/git-istash-commons"
	case "$(find_data_files)" in
		'nothing')
			printf 'fatal: There doesn'\''t seem to be any operation in progress.\n' 1>&2
			exit 1
			;;
		'apply')
			exec_subcommand 'apply' "$@"
			;;
		'pop')
			exec_subcommand 'pop' "$@"
			;;
		'error')
			printf 'fatal: The operation in progress seems damaged.\n' 1>&2
			exit 1
			;;
	esac
fi

git_version="$(git --version | head -n 1 | grep -Eo '\<\S+$')"
if ! printf '%s' "$git_version" | grep -Exq '2\.(4[2-9]|[5-9][0-9]|[0-9]{3,})(\..+)?'
then
	printf 'fatal: the current Git version (%s) is less than minimum required (%s)\n' "$git_version" "$min_git_version" 1>&2
	exit 1
fi

if [ $# -eq 0 ] || printf '%s' "$1" | grep -Eq '^-'
then
	set -- 'push' '--_implicit-push_' "$@"
fi
exec_subcommand "$@"
